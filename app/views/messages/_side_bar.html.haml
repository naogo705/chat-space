      .side-bar__user-info__user-items__name
        = current_user.nickname
      %ul.side-bar__user-info__user-items__iconlist
        %li.side-bar__user-info__user-items__iconlist__icon
          = link_to "#" do
            = icon('fas', 'edit', class: "icon-btn")
        %li.side-bar__user-info__user-items__iconlist__icon
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: "icon-btn")
