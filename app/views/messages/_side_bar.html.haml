.side-bar
  .side-bar__user-info
    .side-bar__user-info__user-items
      .side-bar__user-info__user-items__name
        = current_user.nickname
      %ul.side-bar__user-info__user-items__iconlist
        %li.side-bar__user-info__user-items__iconlist__icon
          = link_to new_group_path do
            = icon('fas', 'edit', class: "icon-btn")
        %li.side-bar__user-info__user-items__iconlist__icon
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: "icon-btn")
  .GroupList
    - current_user.groups.each do |group|
      .Group
        = link_to group_messages_path(group), class: "group-link" do
          .Group__name
            = group.name
          .Group__message
            = group.show_last_message
