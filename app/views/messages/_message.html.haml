.main-chat__message-list__group-message
  .main-chat__message-list__group-message__list
    .main-chat__message-list__group-message__list__name
      = message.user.nickname
    .main-chat__message-list__group-message__list__dateinfo
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .Message
    - if message.content.present?
      %p.Message__content
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?
